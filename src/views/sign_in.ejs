  <body>
    <div class="banner">
      <img src="/images/logo_tach_nen_den.png" class="logo_phone" />
      <div id="convert_language">
        <img src="/images/co_vietnam.png" id="flag" />
        <span id="text_language">VI</span>
      </div>
      <div class="header">
        <h2>Sign In</h2>
        <p><a href="/">Home</a> &ensp;> &ensp;Sign in</p>
      </div>
      <div class="div_form">
        <form id="form">
          <p id="message"></p>
          <input
            name="user_name"
            type="text"
            required
            id="user_name"
            class="input"
            pattern="[A-Za-z0-9@]{1,20}"
            placeholder="Tên tài khoản/User name"
          />
          <br />
          <input
            name="user_password"
            type="password"
            required
            id="user_password"
            class="input"
            pattern="[A-Za-z0-9@]{1,20}"
            placeholder="Mật khẩu/Password"
          />
          <br />
          <button data-i18n="Sign_in" data-i18n="Sign_in">Đăng nhập</button>
          <a href="/sign_up" class="sign_up" data-i18n="Sign_up">Đăng ký</a>
        </form>
      </div>
      <div class="footer_banner"></div>
    </div>

    <div id="b6">
      <div class="information information_1">
        <img src="/images/Logo tách nền.png" class="logo_b6" />
        <h3 class="coffuel_b6">Coffuel</h3>
        <div class="send_email">
          <input
            type="email"
            id="email_received"
            required
            placeholder="Email nhận thông tin"
          />
          <button id="send_email" data-i18n="Send">Gửi</button>
        </div>
      </div>
      <div class="information information_3" data-i18n="contact">
        <h2>
          LIÊN HỆ VỚI TRỤ SỞ &ensp;
